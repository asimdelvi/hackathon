<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartCity</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheet/custom.css" />
  </head>

  <body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
    <main class="container d-flex flex-wrap mt-5">
      <% for (const city of cities) { %>
      <div class="shadow card m-3 card-border" style="width: 18rem">
        <img
          src="<%= city.image %>"
          style="height: 12rem"
          class="card-img-top"
          alt="city"
        />

        <div class="card-body d-flex justify-content-between">
          <h5 class="d-inline card-title"><%= city.cityname %></h5>
          <a href="/city/<%= city.id %>" class="d-inline btn btn-sm">View</a>
        </div>
      </div>
      <% } %>
    </main>
    <%- include('../partials/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script src="/javascripts/validateForms.js"></script>
  </body>
</html>
