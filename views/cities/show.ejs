<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartCity</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheet/custom.css" />
  </head>

  <body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
    <main class="container mt-5">
      <div class="card mb-3 card-border card-border-verticle shadow">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= city.image %>" class="img-fluid" alt="hotel" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= city.cityname %></h5>
              <p class="card-text"><%= city.description %></p>
              <p class="card-text">Location: <%= city.location %></p>
            </div>
          </div>
        </div>
      </div>
      <div>
        <h3 class="mt-5">Hotels</h3>
        <div class="d-flex flex-wrap">
          <% for (const hotel of city.hotels) { %>
          <div class="shadow card m-3 card-border" style="width: 18rem">
            <img
              src="<%= hotel.image %>"
              style="height: 12rem"
              class="card-img-top"
              alt="city"
            />

            <div class="card-body">
              <h5 class="card-title"><%= hotel.hotelname %></h5>
              <p class="card-text">Location: <%= hotel.location %></p>
              <p class="card-text">&#x20b9;<%= hotel.price %></p>
            </div>
          </div>
          <% } %>
        </div>
        <div class="mb-3 ms-3">
          <a class="btn" href="/city/<%= city.id %>/hotel/new">Add New Hotel</a>
        </div>
      </div>
      <div>
        <h3 class="mt-5">Places</h3>
        <div class="d-flex flex-wrap">
          <% for (const place of city.places) { %>
          <div class="shadow card m-3 card-border" style="width: 18rem">
            <img
              src="<%= place.image %>"
              style="height: 12rem"
              class="card-img-top"
              alt="city"
            />

            <div class="card-body">
              <h5 class="card-title"><%= place.placename %></h5>
              <p class="card-text">Location: <%= place.location %></p>
            </div>
          </div>
          <% } %>
        </div>

        <div class="mb-3 ms-3">
          <a class="btn" href="/city/<%= city.id %>/place/new">Add New Place</a>
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script src="/javascripts/validateForms.js"></script>
  </body>
</html>

<script src="/javascripts/showPageMap.js"></script>
