<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YelpCamp</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Mapbox -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>

  <body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
    <main class="container mt-5">
      <div class="row gx-5">
        <div class="col">
          <div class="shadow rounded card m-3">
            <img src="<%= city.image %>" class="card-img-top" alt="..." />
            <div class="pt-2 card-body">
              <h5 class="card-title"><%= city.cityname %></h5>
              <p class="card-text"><%= city.description %></p>
              <p class="card-text"><%= city.location %></p>
            </div>
          </div>
        </div>
      </div>
      <div>
        <h3>Hotels</h3>
        <% for (const hotel of city.hotels) { %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= hotel.image %>"
                class="img-fluid rounded-start"
                alt="hotel"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= hotel.hotelname %></h5>
                <p class="card-text"><%= hotel.description %></p>
                <p class="card-text"><%= hotel.location %></p>
                <p class="card-text"><%= hotel.price %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <div>
          <a class="btn btn-primary" href="/city/<%= city.id %>/hotel/new"
            >Add New Hotel</a
          >
        </div>
      </div>
      <div>
        <h3>Places</h3>
        <% for (const place of city.places) { %>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= place.image %>"
                class="img-fluid rounded-start"
                alt="place"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= place.placename %></h5>
                <p class="card-text"><%= place.description %></p>
                <p class="card-text"><%= place.location %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <div>
          <a class="btn btn-primary" href="/city/<%= city.id %>/place/new"
            >Add New Place</a
          >
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script src="/javascripts/validateForms.js"></script>
  </body>
</html>

<script src="/javascripts/showPageMap.js"></script>
